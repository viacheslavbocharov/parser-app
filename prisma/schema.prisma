datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

generator client {
  provider = "prisma-client-js"
}

model FeedCache {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  url          String   @unique
  title        String?
  etag         String?
  lastModified String?
  itemsCount   Int      @default(0)
  fetchedAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model FeedItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String   // связь по URL фида
  guid      String?  // если есть уникальный guid
  title     String?
  link      String?
  isoDate   DateTime?
  createdAt DateTime @default(now())

  @@index([url])
  @@index([url, guid])
}
